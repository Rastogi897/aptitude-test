      //ctx.fillStyle = 'black';
      //ctx.fillText(`CERTIFICATE OF COMPLETION`, canvas.width / 2, canvas.height / 2 - 125);
      //ctx.font = '25px Trebuchet MS';
      //ctx.fillText(`on successful completion`, canvas.width / 2, canvas.height / 2 - 85);

