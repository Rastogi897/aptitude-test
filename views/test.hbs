      ctx.font = 'Bold 64px Trebuchet MS';
      ctx.fillStyle = '#3b82f6';
      ctx.fillText(`üèÖCertificate of Completion`, canvas.width / 2, canvas.height / 2 - 290);
      ctx.font = 'Bold 30px Trebuchet MS';
